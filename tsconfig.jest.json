{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "resolveJsonModule": true
  },
  "include": ["api/**/*.ts", "tests/**/*.ts"]
}
